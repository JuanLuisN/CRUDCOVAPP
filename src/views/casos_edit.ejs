<% include partials/_header %>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.IdCasos %>"" method="POST">
                        <div class="form-group">
                            <label>Casos confirmados</label>
                            <input type="number"  name="confirmados" value="<%= data.confirmados %>" placeholder="Casos confirmados" class="form-control" min="0" required >
                        </div>
                        <div class="form-group">
                            <label>Casos negativos</label>
                            <input type="number" name="negativos" value="<%= data.negativos %>" placeholder="Casos negativos" class="form-control" min="0" required >
                        </div>
                        <div class="form-group">
                            <label>Casos sospechosos</label>
                            <input type="number" name="sospechosos" value="<%= data.sospechosos %>" placeholder="Casos sospechosos" class="form-control" min="0" required >
                        </div>
                        <div class="form-group">
                            <label>Defunciones</label>
                            <input type="number" name="defunciones" value="<%= data.defunciones %>" placeholder="Defunciones" class="form-control" min="0" required >
                        </div>
                        <div class="form-group">
                            <label>Casos recuperados</label>
                            <input type="number" name="recuperados" value="<%= data.recuperados %>" placeholder="Casos recuperados" class="form-control" min="0" required >
                        </div>
                        <div class="form-group">
                            <label>Casos activos</label>
                            <input type="number" name="activos" value="<%= data.activos %>" placeholder="Casos activos" class="form-control" min="0" required >
                        </div>
                        <div class="form-group">
                            <label>Fecha de los casos</label>
                            <input type="date" name="fecha" value="<%= data.fecha %>" placeholder="Fecha de los casos" class="form-control" min="0" required >
                        </div>
                        <div class="form-group">
                            <select name="semaforo"   value="<%= data.semaforo %>" placeholder="Semaforo" class="form-control" required>
                                <option value="Rojo">Rojo</option>
                                <option value="Naranja">Naranja </option>
                                <option value="Amarillo">Amarillo</option>
                                <option value="Verde">Verde</option>
                              </select>
                        </div>
                        
                        <button type="submit" class="btn btn-outline-light">
                            Guardar datos modificados
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<% include partials/_footer %>
