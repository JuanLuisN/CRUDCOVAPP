<% include partials/_header %>
<div class="container mt-5 ">
    <div class="row">
        <div class="col">
            <button type="button" class="btn bg-dark text-white btn-outline-dark btn-block" data-bs-toggle="modal" data-bs-target="#addhospital">
               <strong>AGREGAR NUEVO HOSPITAL</strong> 
              </button>
        </div>
    </div>
</div>
<% if(success_msg.length>0){%>
    <% include partials/_alertsuccess %>
<%}%>  
<div class="container">
    <div class="row mt-5">
        <div class="col-auto">
            <table class="table text-center  table-responsive table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Direcci√≥n</th>
                        <th>Nivel de Atencion</th>
                        <th>Telefono</th>
                        <th>Color</th>
                        <th>Mapa</th>
                        <th>Opciones</th>
                    </tr>                  
                </thead>
                <tbody>
                    <% if(data) {%>
                        <% for(var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= data[i].IdHospital %></td>
                                <td><%= data[i].nombre %></td>
                                <td><%= data[i].direccion %></td>
                                <td><%= data[i].nivelaten%></td>
                                <td><%= data[i].telefono %></td>
                                <%if(data[i].color=='blue darken-2 white-text'){%>
                                <td>Azul</td>
                                <% } %>
                                <%if(data[i].color=='indigo lighten-5'){%>
                                    <td>Blanco</td>
                                    <% } %>
                                <td><iframe src="<%=data[i].mapa%>" width="300" height="225" style="border:0;" allowfullscreen="" loading="lazy"></iframe>     </td>
                                <td>   
                                     <!--Calling Delete modal from partials-->                                       
                                     <% include partials/_deletehospmodal %>
                                     <!--/Delete modal-->  
                                     </div>
                                     <button type="button" class="btn btn-outline-warning mb-2" data-bs-toggle="modal" data-bs-target="#eliminarhosp<%=data[i].IdHospital%>">
                                         Eliminar
                                       </button>
                                        <a href="/updatehospital/<%= data[i].IdHospital %>" class="btn btn-outline-info">Actualizar<a>   
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>       
        </div>
    </div>
</div>

<% include partials/_addhospitalesmodal %>
<% include partials/_footer %>
