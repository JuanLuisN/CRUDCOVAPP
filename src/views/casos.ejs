<% include partials/_header %>
<div class="container mt-5 d-flex justify-content-center">
    <div class="card w-100" style="width: 18rem;">      
        <div class="card-body">
            <form class="form" action="/buscarcasos" method="POST">
                <div class="row">
                    <div class="col col-lg-11 col-xl-11 col-md-10 col-sm-10 col-10">
                        <div class="form-group">
                            <input  id="buscar" name="buscar" class="form-control" placeholder="Buscar casos por fecha..." >
                        </div>
                    </div>
                    <div class="col col-lg-1 col-xl-1 col-sm-2 col-2">
                        <button class="btn btn-outline-primary btn-block text-center" type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>        
        </div>
      </div>
</div>
<div class="container mt-5 ">
    <div class="row">
        <div class="col">
            <button type="button" class="btn bg-dark text-white btn-outline-dark btn-block" data-bs-toggle="modal" data-bs-target="#casos">
               <strong>AGREGAR REGISTRO</strong> 
              </button>
        </div>
    </div>
</div>

<% if(success_msg.length>0){%>
    <% include partials/_alertsuccess %>
<%}%>
<div class="container justify-content-center text-center">
    <div class="row mt-5">
        <div class="col-auto">
            <table class="table table-responsive  table-striped">
                <thead>
                    <div class="container" style="font-size: 25px;">
                        <strong>Registros casos COVID-19 Lagos de Moreno</strong>
                    </div>
                    <tr>
                        <th>#</th>
                        <th>Casos Totales</th>
                        <th>Negativos</th>
                        <th>Sospechosos</th>
                        <th>Defunciones</th>
                        <th>Recuperados</th>
                        <th>Activos</th>
                        <th>Fecha</th>
                        <th>Semaforo</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) {%>
                        <% for(var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= data[i].IdCasos %></td>
                                <td><%= data[i].confirmados %></td>
                                <td><%= data[i].negativos %></td>
                                <td><%= data[i].sospechosos %></td>
                                <td><%= data[i].defunciones %></td>
                                <td><%= data[i].recuperados %></td>
                                <td><%= data[i].activos %></td>
                                <td><%= data[i].fecha %></td>
                                <td><%= data[i].semaforo %></td>  
                                <td>  
                                    <!--Calling Delete modal from partials-->                                       
                                    <% include partials/_deletecasosmodal %>
                                    <!--/Delete modal-->  
                                    </div>
                                    <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#eliminar<%= data[i].IdCasos %>">
                                        Eliminar
                                      </button>
                                        <a href="/update/<%= data[i].IdCasos %>" class="btn btn-outline-info">Actualizar<a>   
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        </div>
     
        
<% include partials/_modaladdcasos %>
<% include partials/_footer %>
