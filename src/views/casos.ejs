<% include partials/_header %>
<div class="container mt-5 ">
    <div class="row">
        <div class="col">
            <button type="button" class="btn bg-dark text-white btn-outline-primary btn-block" data-toggle="modal" data-target="#casos">
               <strong>AGREGAR REGISTRO</strong> 
              </button>
        </div>
    </div>
</div>

<% if(success_msg.length>0){%>
    <% include partials/_alertsuccess %>
<%}%>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-12">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Cases</th>
                        <th>Negatives</th>
                        <th>Sus</th>
                        <th>Deaths</th>
                        <th>Recovered</th>
                        <th>Active</th>
                        <th>Date</th>
                        <th>Semaforo</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) {%>
                        <% for(var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= data[i].IdCasos %></td>
                                <td><%= data[i].confirmados %></td>
                                <td><%= data[i].negativos %></td>
                                <td><%= data[i].sospechosos %></td>
                                <td><%= data[i].defunciones %></td>
                                <td><%= data[i].recuperados %></td>
                                <td><%= data[i].activos %></td>
                                <td><%= data[i].fecha %></td>
                                <td><%= data[i].semaforo %></td>  
                                <td>
                                    <a href="/delete/<%= data[i].IdCasos %>" class="btn btn-outline-warning">ELIMINAR<a><br>
                                        <a href="/update/<%= data[i].IdCasos %>" class="btn btn-outline-info">ACTUALIZAR<a>   
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
     
        
<% include partials/_modal %>
<% include partials/_footer %>

