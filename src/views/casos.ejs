<% include partials/_header %>
<div class="container mt-5 ">
    <div class="row">
        <div class="col">
            <button type="button" class="btn bg-dark text-white btn-outline-primary btn-block" data-bs-toggle="modal" data-bs-target="#casos">
               <strong>AGREGAR REGISTRO</strong> 
              </button>
        </div>
    </div>
</div>

<% if(success_msg.length>0){%>
    <% include partials/_alertsuccess %>
<%}%>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-12">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Cases</th>
                        <th>Negatives</th>
                        <th>Sus</th>
                        <th>Deaths</th>
                        <th>Recovered</th>
                        <th>Active</th>
                        <th>Date</th>
                        <th>Semaforo</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) {%>
                        <% for(var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= data[i].IdCasos %></td>
                                <td><%= data[i].confirmados %></td>
                                <td><%= data[i].negativos %></td>
                                <td><%= data[i].sospechosos %></td>
                                <td><%= data[i].defunciones %></td>
                                <td><%= data[i].recuperados %></td>
                                <td><%= data[i].activos %></td>
                                <td><%= data[i].fecha %></td>
                                <td><%= data[i].semaforo %></td>  
                                <td>                                         
                                    <div id="eliminar<%= data[i].IdCasos %>" class="modal" tabindex="-1">
                                        <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                            <h5 class="modal-title text-center">Eliminar Registro</h5>
                                            <a href="/casos" class="close" >
                                                <span aria-hidden="true">&times;</span>
                                            </a>
                                           
                                            </div>
                                            <div class="modal-body">
                                                <div class="container mb-3 text-center">
                                                    <strong class=""> Â¿Estas seguro de eliminar el registro <%= data[i].IdCasos %>?</strong>  
                                                </div> 
                                                <a href="/delete/<%= data[i].IdCasos %>" class="btn btn-block btn-outline-warning mb-2">Si, eliminar<a>
                                                <a href="/casos" class="btn btn-block btn-outline-primary">Cancelar<a><br>
                                            </div>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#eliminar<%= data[i].IdCasos %>">
                                        Eliminar
                                      </button>
                                        <a href="/update/<%= data[i].IdCasos %>" class="btn btn-outline-info">ACTUALIZAR<a>   
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
     
        
<% include partials/_modal %>
<% include partials/_footer %>
